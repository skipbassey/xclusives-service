{
  "name": "xclusives-service",
  "version": "1.0.0",
  "description": "Backend service for xclusives mobile application",
  "main": "app.js",
  "repository": "https://github.com/awslabs/aws-sam-cli/tree/develop/samcli/local/init/templates/cookiecutter-aws-sam-hello-nodejs",
  "author": "SAM CLI",
  "license": "MIT",
  "dependencies": {
    "@types/mocha": "^8.0.3",
    "@types/zipcodes": "^8.0.0",
    "aws-amplify": "^3.3.2",
    "aws-s3": "^2.0.5",
    "axios": "^0.18.0"
  },
  "scripts": {
    "test": "mocha tests/unit/",
    "prebuild": "mkdirp ../dist || true",
    "copy-package-json": "cpx \"./package.json\" ../dist/ && cpx \"./package-lock.json\" ../dist/",
    "copy-dependencies": "cpx \"./node_modules/**/*\" ../dist/node_modules && cpx \"./package.json\" ../dist/",
    "build": "npm run prebuild && npm run copy-dependencies && tsc",
    "sam-build": "sam build -t \"../template.dev.yaml\" -b \"../.aws-sam\"",
    "sam-local-create": "cd .. && sam local invoke CreateBusiness --event events/create.json",
    "sam-local-get": "cd .. && sam local invoke Get --event /events/get.json",
    "sam-local-update": "cd .. && sam local invoke UpdateBusiness --event events/update.json",
    "sam-local-get-photo": "cd .. && sam local invoke GetPhoto --event events/getPhoto.json",
    "clean-dist-folder": "del-cli -f ../dist/** && npm run prebuild",
    "npm-prod": "cd ./../dist/ && npm install --only && del-cli -f ../dist/package-lock.json",
    "prod-build": "npm run clean-dist-folder && cpx \"./package.json\" ../dist/ && tsc && npm run npm-prod",
    "zip-and-move": "cd ../dist/ && bestzip ../lambda.zip * && move-file ../lambda.zip ../dist/lambda.zip",
    "zip-lambda": "del-cli -f ../dist/lambda.zip && npm run zip-and-move",
    "build-and-zip": "npm run prod-build && npm run zip-lambda",
    "plan": "cd ../terraform && terraform plan",
    "apply": "cd ../terraform && terraform apply",
    "destroy": "cd ../terraform && terraform destroy",
    "installs": "npm i -g typescript && npm i -g cpx && npm i -g del-cli && npm i -g bestzip && npm i -g move-file-cli && npm i -g mocha && npm i -g aws-sdk && npm i -g aws-lambda && npm install",
    "compile": "npm run copy-package-json && tsc",
    "terraform-init": "cd terraform && terraform init",
    "terraform-plan": "cd terraform && terraform vailidate && terraform plan",
    "terraform-validate": "cd terraform && terraform validate",
    "terraform-apply": "cd terraform && terraform apply -auto-approve",
    "terraform-destroy": "cd terraform && terraform destroy",
    "sam-deploy": "sam deploy -t ../config/template.dev.yaml --stack-name blokparty",
    "delete-stack": "aws cloudformation delete-stack --stack-name xlcusives-service"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.61",
    "@types/node": "^13.13.21",
    "aws-lambda": "^1.0.6",
    "aws-sdk": "^2.761.0",
    "bestzip": "^2.1.7",
    "firebase-admin": "^9.3.0",
    "chai": "^4.2.0",
    "data-api-client": "^1.1.0",
    "del-cli": "^3.0.1",
    "mocha": "^6.2.3",
    "moment": "^2.29.0",
    "move-file-cli": "^2.0.0",
    "s3": "^4.4.0",
    "typescript": "^3.9.7",
    "zipcodes": "^8.0.0"
  }
}
